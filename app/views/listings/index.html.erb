<div class="center jumbotron">
 <h1> Welcome to Dealz </h1>
  <h2>
    Have it but don't need it? <%= link_to "Sell it!", new_listing_path %>
  </h2>

  <div id="search_form_div">
    <h2>
    	Need it but don't have it?
		  <%= form_tag listings_path, method: "get", id: "search_form" do %>
		    <%= text_field_tag :search, params[:search], class: "form-control", id: "search_input" %>
		    <%= submit_tag "Find it!", name: nil, class: "form-control", id: "search_submit" %>
			<% end %>
		</h2>
	</div>

</div>

<div>
	<% @listings.in_groups_of(3, false).each do |group| %>
	  <div class="row">
    	<% group.each do |listing| %>
        <div class="listing col-md-4">
						<h3><%=link_to listing.product, listing_path(listing) %></h3>

						<p> <%= listing.description %> </p>

						<p>Price: <%= number_to_currency(listing.price, unit: "MYR", format: "%n %u") %></p>
				</div>
      <% end %>
	  </div>
	<% end %>
</div>

