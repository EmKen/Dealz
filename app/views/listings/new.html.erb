<h1>New Listing</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@listing) do |f| %>
      <%= render 'shared/errors' %>
      <%= f.label :product %>
      <%= f.text_field :product, class: "form-control" %>

      <%= f.label :description %>
      <%= f.text_field :description, class: "form-control" %>

      <%= f.label :category %>
      <%= f.select :category, Listing.distinct.pluck(:category) << "Miscellaneous", {}, {class: "form-control"} %>

      <%= f.label :price, "Price (in MYR)" %>
      <%= f.number_field :price, class: "form-control", step: 0.05, min: 1 %>

      <%= f.submit "Create listing", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
